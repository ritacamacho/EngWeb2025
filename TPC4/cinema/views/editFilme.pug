extends layout

block content
    .w3-card-4
        header.w3-container.w3-blue
            h1 Editar Filme
        .w3-container
            form(action=`/filmes/editar/${filme.id}`, method="POST")
                label(for="title") Título
                input(type="text", name="title", id="title", value=filme.title, required, class="w3-input w3-border")

                label(for="year") Ano
                input(type="number", name="year", id="year", value=filme.year, required, class="w3-input w3-border")

                label(for="cast") Elenco
                input(type="text", name="cast", id="cast", value=filme.cast.join(', '), class="w3-input w3-border")

                label(for="genres") Géneros
                input(type="text", name="genres", id="genres", value=filme.genres.join(', '), class="w3-input w3-border")

                button(type="submit" class="w3-btn w3-green w3-margin-top") Atualizar Filme
        footer.w3-container.w3-blue
            adress Generated by EW2025 class