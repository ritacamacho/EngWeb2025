extends layout

block content
    .w3-card-4
        header.w3-container.w3-blue
            h1= title
        .w3-container
            h3 Filme
            ul.w3-ul
                li Ano: #{filme.year}
                li Título: #{filme.title}
                li Elenco: 
                    ul.w3-ul
                        if filme.cast
                            each actor in filme.cast
                                li= actor
                li Géneros: 
                    ul.w3-ul
                        if filme.genres
                            each genre in filme.genres
                                li= genre

        a(href="/filmes/editar/" + filme.id, class="w3-button w3-yellow w3-margin") Editar Filme

        form(action=`/filmes/delete/${filme.id}`, method="POST")
                button(type="submit", class="w3-button w3-red w3-margin") Eliminar Filme

    footer.w3-container.w3-blue
        adress Generated by EW2025 class