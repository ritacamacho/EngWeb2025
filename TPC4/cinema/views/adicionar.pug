extends layout

block content
    .w3-card-4
        header.w3-container.w3-blue
            h1 Adicionar Novo Filme
        .w3-container
            form(action="/filmes/adicionar", method="POST")
                // Título
                label(for="title") Título
                input(type="text", name="title", id="title", required, placeholder="Digite o título do filme", class="w3-input w3-border")

                // Ano
                label(for="year") Ano
                input(type="number", name="year", id="year", required, placeholder="Digite o ano de lançamento", class="w3-input w3-border")

                // Elenco
                label(for="cast") Elenco (separado por vírgulas)
                input(type="text", name="cast", id="cast", placeholder="Digite o elenco, ex: Ator1, Ator2", class="w3-input w3-border")

                // Géneros
                label(for="genres") Géneros (separado por vírgulas)
                input(type="text", name="genres", id="genres", placeholder="Digite os géneros, ex: Ação, Comédia", class="w3-input w3-border")

                // Submit button
                button(type="submit" class="w3-btn w3-green w3-margin") Adicionar Filme
        footer.w3-container.w3-blue
