extends layout

block content
    .w3-card-4
        header.w3-container.w3-blue
            h1= title
        .w3-container
            .w3-container
            a(href="/filmes/adicionar" class="w3-btn w3-green w3-margin") Adicionar Novo Filme
            ul.w3-ul
                table.w3-table-all
                    tr
                        th Ano
                        th Título
                        th Elenco
                        th Géneros
                    each filme in filmes
                        tr
                        td= filme.year
                        td
                            a(href="/filmes/" + filme.id)= filme.title
                        td 
                            ul.w3-ul 
                                if filme.cast
                                    each actor in filme.cast
                                        li= actor
                        td
                            ul.w3-ul
                                if filme.genres
                                    each genre in filme.genres
                                        li= genre
        footer.w3-container.w3-blue
            adress Generated by EW2025 class